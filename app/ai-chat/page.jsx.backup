'use client';
import { useState, useEffect, useRef, Suspense } from 'react';
import { useRouter, useSearchParams } from 'next/navigation';
import Header from '../components/Header';

function ChatContent() {
  const router = useRouter();
  const searchParams = useSearchParams();
  const role = searchParams?.get('role') || 'employer';
  const priorities = searchParams?.get('priorities')?.split(',') || [];
  
  const [messages, setMessages] = useState([]);
  const [input, setInput] = useState('');
  const [loading, setLoading] = useState(false);
  const [sessionId] = useState(() => `session_${Date.now()}_${Math.random().toString(36).substr(2, 9)}`);
  const [interviewComplete, setInterviewComplete] = useState(false);
  const [buttonOptions, setButtonOptions] = useState([]);
  const [multiSelect, setMultiSelect] = useState(false);
  const [selectedOptions, setSelectedOptions] = useState([]);
  const messagesEndRef = useRef(null);
  const inputRef = useRef(null);

  useEffect(() => {
    messagesEndRef.current?.scrollIntoView({ behavior: "smooth" });
  }, [messages]);

  useEffect(() => {
    startInterview();
  }, []);

  useEffect(() => {
    if (!interviewComplete && !buttonOptions.length && inputRef.current) {
      inputRef.current.focus();
    }
  }, [messages, interviewComplete, buttonOptions]);

  const getPriorityText = () => {
    const priorityMap = {
      cost: 'cutting costs', speed: 'faster decisions', alignment: 'stakeholder alignment',
      satisfaction: 'employee satisfaction', switch: 'switching brokers', expertise: 'specialized expertise',
      specialization: 'proving your niche', leads: 'getting qualified leads', fees: 'commanding higher fees',
      close: 'improving close rates', leadership: 'building thought leadership', tools: 'using decision tools'
    };
    return priorities.map(p => priorityMap[p] || p).join(', ');
  };

  const startInterview = async () => {
    const priorityText = getPriorityText();
    const customGreeting = priorityText 
      ? `ðŸ‘‹ Hi! I'm RightFit. I see you're focused on ${priorityText}. Let's get you matched. What's your work email?`
      : `ðŸ‘‹ Hi! I'm RightFit. What's your work email?`;
    
    setMessages([{ role: 'ai', content: customGreeting }]);
    
    try {
      await fetch('http://localhost:8000/api/start-interview', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ 
          user_type: role, 
          session_id: sessionId,
          priorities: priorities
        })
      });
    } catch (error) {
      console.error('Error:', error);
    }
  };

  const addMsg = (r, c) => setMessages(m => [...m, { role: r, content: c }]);

  const extractOptions = (text) => {
    const match = text.match(/\(e\.g\.,\s*([^)]+)\)/);
    if (match) {
      const isMulti = text.toLowerCase().includes('pick') || text.toLowerCase().includes('select');
      return { options: match[1].split(',').map(opt => opt.trim()), multi: isMulti };
    }
    return { options: [], multi: false };
  };

  const extractEmailAndName = (conversationHistory) => {
    const firstResponse = conversationHistory.find(msg => msg.role === 'user');
    if (firstResponse) {
      const emailMatch = firstResponse.content.match(/([a-zA-Z0-9._-]+@[a-zA-Z0-9._-]+\.[a-zA-Z0-9_-]+)/);
      if (emailMatch) {
        const email = emailMatch[0];
        const domain = email.split('@')[1].split('.')[0];
        const name = domain.charAt(0).toUpperCase() + domain.slice(1);
        return { email, name };
      }
    }
    return { email: 'user@company.com', name: 'User' };
  };

  const sendMessage = async (userMessage) => {
    if (loading || interviewComplete) return;

    addMsg('user', userMessage);
    setInput('');
    setButtonOptions([]);
    setMultiSelect(false);
    setSelectedOptions([]);
    setLoading(true);

    try {
      const response = await fetch('http://localhost:8000/api/continue-interview', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ session_id: sessionId, message: userMessage })
      });

      const data = await response.json();
      
      if (data.interview_complete) {
        setInterviewComplete(true);
        const extracted = extractEmailAndName(data.conversation_history || []);
        addMsg('ai', "âœ¨ Perfect! Generating your report...");
        setTimeout(() => {
          completeInterview(extracted.email, extracted.name);
        }, 1000);
      } else if (data.next_question) {
        let question = data.next_question;
        if (question.includes('```json')) {
          try {
            const jsonMatch = question.match(/```json\n([\s\S]*?)\n```/);
            if (jsonMatch) {
              const parsed = JSON.parse(jsonMatch[1]);
              question = parsed.next_question || question;
            }
          } catch (e) {}
        }
        
        const { options, multi } = extractOptions(question);
        if (options.length >= 2) {
          question = question.replace(/\s*\(e\.g\.,\s*[^)]+\)/, '');
          setButtonOptions(options);
          setMultiSelect(multi);
        }
        
        setTimeout(() => {
          addMsg('ai', question);
        }, 600);
      }
    } catch (error) {
      console.error('Error:', error);
      addMsg('ai', "Error. Please try again.");
    }

    setLoading(false);
  };

  const handleSubmit = (e) => {
    e.preventDefault();
    if (input.trim()) {
      sendMessage(input.trim());
    }
  };

  const handleButtonClick = (option) => {
    if (multiSelect) {
      setSelectedOptions(prev => 
        prev.includes(option) ? prev.filter(o => o !== option) : [...prev, option]
      );
    } else {
      sendMessage(option);
    }
  };

  const handleMultiSubmit = () => {
    if (selectedOptions.length > 0) {
      sendMessage(selectedOptions.join(', '));
    }
  };

  const completeInterview = async (email, name) => {
    setLoading(true);

    try {
      const endpoint = role === 'broker' 
        ? 'http://localhost:8000/api/complete-broker'
        : 'http://localhost:8000/api/complete-employer';
      
      const payload = role === 'broker'
        ? { session_id: sessionId, email, name }
        : { session_id: sessionId, email, company_name: name };

      const response = await fetch(endpoint, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(payload)
      });

      const data = await response.json();
      
      if (data.success) {
        sessionStorage.setItem('rightfit_results', JSON.stringify(data));
        router.push(`/results?role=${role}`);
      }
    } catch (error) {
      console.error('Error:', error);
      addMsg('ai', "Error generating report.");
      setInterviewComplete(false);
    }

    setLoading(false);
  };

  return (
    <div className="min-h-screen bg-slate-950 flex flex-col">
      <Header showBackButton={true} />

      <div className="flex-1 flex flex-col max-w-3xl mx-auto w-full px-4 py-6">
        
        {/* Agentic AI Badge */}
        <div className="mb-4 text-center">
          <div className="inline-flex items-center gap-2 px-3 py-1.5 bg-blue-600/10 border border-blue-500/30 rounded-full">
            <div className="w-1.5 h-1.5 bg-blue-400 rounded-full animate-pulse"></div>
            <span className="text-blue-300 text-xs font-medium">Powered by Agentic AI</span>
          </div>
        </div>

        <div className="flex-1 space-y-4 mb-6 overflow-y-auto">
          {messages.map((msg, idx) => (
            <div key={idx}>
              <div className={`flex ${msg.role === 'user' ? 'justify-end' : 'justify-start'}`}>
                <div className={`flex items-start gap-3 max-w-[80%] ${msg.role === 'user' ? 'flex-row-reverse' : ''}`}>
                  {msg.role === 'ai' && (
                    <div className="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center text-white flex-shrink-0">
                      ðŸ¤–
                    </div>
                  )}
                  <div className={`px-4 py-3 rounded-2xl ${
                    msg.role === 'user' ? 'bg-blue-600 text-white' : 'bg-slate-800 text-slate-100'
                  }`}>
                    {msg.content}
                  </div>
                </div>
              </div>
              
              {msg.role === 'ai' && idx === messages.length - 1 && !loading && buttonOptions.length > 0 && (
                <div className="flex justify-start mt-2 ml-11">
                  <div className="flex flex-wrap gap-1.5">
                    {buttonOptions.map((option, optIdx) => (
                      <button
                        key={optIdx}
                        onClick={() => handleButtonClick(option)}
                        disabled={loading}
                        className={`px-2 py-1 text-[11px] border rounded transition disabled:opacity-50 ${
                          selectedOptions.includes(option)
                            ? 'bg-blue-600 border-blue-500 text-white'
                            : 'bg-slate-700 border-slate-600 text-white hover:bg-blue-600 hover:border-blue-500'
                        }`}
                      >
                        {option}
                      </button>
                    ))}
                  </div>
                </div>
              )}
              
              {msg.role === 'ai' && idx === messages.length - 1 && !loading && multiSelect && selectedOptions.length > 0 && (
                <div className="flex justify-start mt-2 ml-11">
                  <button
                    onClick={handleMultiSubmit}
                    className="px-3 py-1.5 text-xs bg-green-600 hover:bg-green-700 text-white rounded font-semibold transition"
                  >
                    Continue with {selectedOptions.length} selected â†’
                  </button>
                </div>
              )}
            </div>
          ))}
          
          {loading && (
            <div className="flex justify-start">
              <div className="flex items-start gap-3">
                <div className="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center text-white">
                  ðŸ¤–
                </div>
                <div className="bg-slate-800 px-4 py-3 rounded-2xl">
                  <div className="flex gap-1">
                    <div className="w-2 h-2 bg-slate-500 rounded-full animate-bounce"></div>
                    <div className="w-2 h-2 bg-slate-500 rounded-full animate-bounce" style={{ animationDelay: '150ms' }}></div>
                    <div className="w-2 h-2 bg-slate-500 rounded-full animate-bounce" style={{ animationDelay: '300ms' }}></div>
                  </div>
                </div>
              </div>
            </div>
          )}
          <div ref={messagesEndRef} />
        </div>

        {!interviewComplete && (
          <form onSubmit={handleSubmit} className="space-y-3">
            <input
              ref={inputRef}
              type="text"
              value={input}
              onChange={(e) => setInput(e.target.value)}
              placeholder="Type your answer..."
              disabled={loading}
              autoFocus
              autoComplete="off"
              className="w-full px-4 py-3 bg-slate-800 border border-slate-700 rounded-xl text-white placeholder-slate-500 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-500/50 disabled:opacity-50"
            />
            <button
              type="submit"
              disabled={loading || !input.trim()}
              className="w-full px-6 py-4 bg-blue-600 hover:bg-blue-700 text-white rounded-xl font-semibold transition disabled:opacity-50"
            >
              Continue â†’
            </button>
          </form>
        )}
      </div>
    </div>
  );
}

export default function AIChatPage() {
  return (
    <Suspense>
      <ChatContent />
    </Suspense>
  );
}
